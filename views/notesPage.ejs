<div class="notes-page">
  <h2 class="notes-title">
    <%= subject %> — Theory
  </h2>

  <!-- Search Box -->
  <div class="search-container">
    <input type="text" id="search" placeholder="Search notes...">
    <button id="search-btn" onclick="searchNotes()">Search</button>
  </div>

  <!-- Notes Container for PDF -->
  <div id="notes-pdf">

    <!-- Only notes content for PDF -->
    <div id="notes-only">
      <% if (notes.length === 0) { %>
        <p class="no-notes">No theory notes available for this subject.</p>
      <% } %>

      <% notes.forEach(note => { %>
        <div class="notes-card" data-title="<%= note.title.toLowerCase() %>">
          <h3 class="note-title"><%= note.title %></h3>

          <% const content = JSON.parse(note.content); %>

          <div class="notes-content">
            <p><strong>Overview:</strong> <span class="note-text"><%= content.overview %></span></p>

            <% if (content.concepts && content.concepts.length > 0) { %>
              <p><strong>Concepts:</strong></p>
              <ul>
                <% content.concepts.forEach(c => { %>
                  <li class="note-text"><%= c %></li>
                <% }) %>
              </ul>
            <% } %>

            <% if (content.example) { %>
              <p><strong>Example:</strong></p>
              <pre class="note-text"><%= content.example %></pre>
            <% } %>

            <% if (content.tips && content.tips.length > 0) { %>
              <p><strong>Tips:</strong></p>
              <ul>
                <% content.tips.forEach(t => { %>
                  <li class="note-text"><%= t %></li>
                <% }) %>
              </ul>
            <% } %>

            <% if (content.references && content.references.length > 0) { %>
              <p class="references"><strong>References:</strong>
                <% content.references.forEach(r => { %>
                  <br>• <a href="<%= r %>" target="_blank"><%= r %></a>
                <% }) %>
              </p>
            <% } %>

            <p class="note-date">
              Added on: <%= note.created_at.toDateString() %>
            </p>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Download Button -->
    <button id="download-btn" onclick="downloadPDF()">Download Notes as PDF</button>
  </div>
</div>

<!-- JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
<script>
function downloadPDF() {
  // Only capture #notes-only (exclude search bar and button)
  const element = document.getElementById("notes-only");

  const opt = {
    margin: 0.5,
    filename: "Notes.pdf",
    image: { type: 'jpeg', quality: 0.98 },
  html2canvas: { 
  scale: 2, 
  logging: true, 
  letterRendering: true, 
  scrollY: 0,
  useCORS: true,
  backgroundColor: '#0D1117' // sets dark background in PDF
},

    jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' },
    pagebreak: { mode: ['css', 'legacy'] }
  };

  html2pdf().set(opt).from(element).save();
}


function searchNotes() {
  const query = document.getElementById('search').value.trim().toLowerCase();
  const notes = document.querySelectorAll('.notes-card');

  if (!query) {
    notes.forEach(note => {
      note.style.display = '';
      note.querySelectorAll('.note-text').forEach(el => {
        el.innerHTML = el.textContent;
      });
    });
    return;
  }

  notes.forEach(note => {
    const title = note.getAttribute('data-title');
    const textElems = note.querySelectorAll('.note-text');
    let found = false;

    textElems.forEach(el => {
      const text = el.textContent;
      const regex = new RegExp(`(${query})`, 'gi');

      if (regex.test(text)) {
        found = true;
        el.innerHTML = text.replace(regex, '<span class="highlight">$1</span>');
      } else {
        el.innerHTML = text;
      }
    });

    note.style.display = found || title.includes(query) ? '' : 'none';
  });
}
</script>


