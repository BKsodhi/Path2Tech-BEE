<% title = "Admin - User Management" %>

<style>
    /* Reusing Dashboard styles for consistency */
    :root {
        --primary-charcoal: #1C232B;
        --primary-dark: #12181F;
        --accent-neon: #00FFD1;
        --edit-color: #FFC300; 
        --delete-color: #FF0066;
        --text-color: #F5F7FA;
        --text-dark: #000000;
    }
    
    .admin-header {
        color: var(--accent-neon);
        text-shadow: 0 0 10px rgba(0, 255, 209, 0.4);
        letter-spacing: 2px;
        margin-bottom: 30px;
        text-transform: uppercase;
    }

    /* TABLE STYLING */
    .table-console {
        background-color: var(--primary-dark); 
        color: var(--text-color);
        border: 1px solid var(--primary-charcoal); 
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.6);
    }
    
    /* Table Header */
    .table-console thead th {
        background-color: var(--primary-charcoal);
        color: var(--accent-neon);
        border-bottom: 3px solid var(--accent-neon); 
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    /* Table Body */
    .table-console tbody td {
        border-top: 1px dashed var(--primary-charcoal); 
        border-bottom: none;
        padding: 12px 10px;
    }

    /* Table Striping */
    .table-console tbody tr:nth-of-type(odd) {
        background-color: var(--primary-dark);
    }
    .table-console tbody tr:nth-of-type(even) {
        background-color: var(--primary-charcoal);
    }
    
    /* Hover Effect */
    .table-console tbody tr:hover {
        background-color: #283743 !important;
        outline: none;
    }
    
    /* Action Buttons (Repurposed from dashboard) */
    .btn-action-base {
        font-weight: 600;
        padding: 5px 10px;
        border-radius: 4px;
        text-transform: uppercase;
        transition: box-shadow 0.2s, transform 0.2s;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    }

    .btn-edit-neon {
        background-color: var(--edit-color);
        border: 1px solid var(--edit-color);
        color: var(--text-dark);
    }
    .btn-edit-neon:hover {
        box-shadow: 0 0 10px var(--edit-color);
        transform: scale(1.05);
    }
    
    .btn-delete-neon {
        background-color: var(--delete-color);
        border: 1px solid var(--delete-color);
        color: var(--text-color);
    }
    .btn-delete-neon:hover {
        box-shadow: 0 0 10px var(--delete-color);
        transform: scale(1.05);
    }
</style>

<div class="container my-5">
    <h2 class="admin-header"><i class="bi bi-people me-2"></i> User Management Console</h2>

    <div class="table-responsive">
        <table class="table table-console">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Joined</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
            <% if (typeof users !== 'undefined' && users.length > 0) { %>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                        <td>
                            <a href="/admin/users/edit/<%= user.id %>" class="btn btn-action-base btn-edit-neon btn-sm me-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form action="/admin/users/delete/<%= user.id %>" method="POST" style="display:inline">
                                <button class="btn btn-action-base btn-delete-neon btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="6" class="text-center" style="color: var(--accent-neon);">
                        <i class="bi bi-info-circle me-2"></i> No user records found in the system.
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>