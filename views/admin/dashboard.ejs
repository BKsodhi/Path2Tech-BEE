<% title = "Admin Dashboard - Path2Tech" %>

<style>
    :root {
        --primary-charcoal: #1C232B;
        --primary-dark: #12181F;
        --accent-neon: #00FFD1;
        --edit-color: #FFC300;
        --delete-color: #FF0066;
        --text-color: #F5F7FA;
        --text-dark: #000000;
    }

    .admin-header {
        color: var(--accent-neon);
        letter-spacing: 2px;
        margin-bottom: 30px;
        text-transform: uppercase;
    }

    .btn-add-neon {
        background-color: var(--accent-neon);
        border: 2px solid var(--accent-neon);
        color: var(--text-dark);
        font-weight: 700;
        transition: all 0.3s;
        box-shadow: 0 0 15px rgba(0, 255, 209, 0.7);
        border-radius: 6px;
    }

    .btn-add-neon:hover {
        box-shadow: 0 0 25px var(--accent-neon);
        transform: scale(1.02);
    }

    .table-console {
        background-color: var(--primary-dark);
        color: var(--text-color);
        border: 1px solid var(--primary-charcoal);
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.6);
        font-family: Arial, sans-serif;
    }

    .table-console thead th {
        background-color: var(--primary-charcoal);
        color: var(--accent-neon);
        border-bottom: 3px solid var(--accent-neon);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table-console tbody td {
        border-top: 1px dashed var(--primary-charcoal);
        border-bottom: none;
        padding: 12px 10px;
    }

    .table-console tbody tr:nth-of-type(odd) {
        background-color: var(--primary-dark);
    }

    .table-console tbody tr:nth-of-type(even) {
        background-color: var(--primary-charcoal);
    }

    .table-console tbody tr:hover {
        background-color: #283743 !important;
        outline: none;
    }

    .btn-action-base {
        padding: 5px 8px;
        border-radius: 4px;
        transition: box-shadow 0.2s, transform 0.2s;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.5);
    }

    .btn-edit-neon {
        background-color: var(--edit-color);
        border: 1px solid var(--edit-color);
        color: var(--text-dark);
    }

    .btn-edit-neon:hover {
        box-shadow: 0 0 10px var(--edit-color);
        transform: scale(1.05);
    }

    .btn-delete-neon {
        background-color: var(--delete-color);
        border: 1px solid var(--delete-color);
        color: var(--text-color);
    }

    .btn-delete-neon:hover {
        box-shadow: 0 0 10px var(--delete-color);
        transform: scale(1.05);
    }
</style>

<div class="container my-5">
    <h2 class="admin-header">
        <i class="bi bi-clipboard-data me-2"></i> 
        Question Management Console
    </h2>

    <a href="/admin/add" class="btn btn-add-neon mb-4">
        <i class="bi bi-plus-circle me-2"></i> 
        Deploy New Question
    </a>

    <div class="table-responsive">
        <table class="table table-console">
            <thead>
                <tr>
                    <th>ID</th>
                    <th style="width: 15%;">Subject</th>
                    <th>Type</th>
                    <th>Difficulty</th>
                    <th>Question</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                <% if (questions && questions.length > 0) { %>
                    <% questions.forEach(q => { %>
                        <tr>
                            <td><%= q.id %></td>
                            <td><%= q.subject %></td>
                            <td><%= q.type %></td>
                            <td><%= q.difficulty %></td>

                            <td>
                                <%= q.question.length > 60 
                                    ? q.question.substring(0, 60) + '...' 
                                    : q.question 
                                %>
                            </td>

                            <td>
                                <a href="/admin/edit/<%= q.id %>" 
                                   class="btn btn-action-base btn-edit-neon btn-sm me-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <form action="/admin/delete/<%= q.id %>" method="POST" style="display:inline">
                                    <button class="btn btn-action-base btn-delete-neon btn-sm">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="6" class="text-center py-4">
                            <h5 class="text-light">No questions found.</h5>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>
