<% title = "Error - System Fault" %>

<style>
  :root {
      --primary-charcoal: #1C232B;
      --accent-neon: #00FFD1;
      --danger-neon: #FF6B6B;
      --text-color: #E5E7EB;
  }

  /* Error container box */
  .error-container {
      margin-top: 100px;
      padding: 50px;
      background-color: var(--primary-charcoal);
      border: 3px solid var(--danger-neon);
      border-radius: 10px;
      box-shadow: 0 0 30px rgba(255, 107, 107, 0.7);
      text-align: center;
  }

  /* Main error heading */
  .error-header {
      color: var(--danger-neon);
      font-size: 3rem;
      font-weight: 800;
      text-shadow: 0 0 10px rgba(255, 107, 107, 0.9);
      letter-spacing: 2px;
  }

  /* Error message box */
  .error-message {
      color: var(--danger-neon) !important;
      font-size: 1.2rem;
      margin: 20px 0;
      padding: 15px;
      background-color: #301f21;
      border-radius: 5px;
      font-family: 'Fira Code', monospace;
  }

  /* Neon button styling */
  .btn-neon-home {
      background-color: var(--accent-neon);
      border-color: var(--accent-neon);
      color: var(--primary-charcoal);
      font-weight: 700;
      padding: 0.75rem 2rem;
      transition: all 0.3s;
  }

  .btn-neon-home:hover {
      background-color: #00E3BB;
      border-color: #00E3BB;
      box-shadow: 0 0 15px var(--accent-neon);
      transform: translateY(-2px);
  }
</style>

<div class="container d-flex justify-content-center">
    <div class="col-lg-6 col-md-8 error-container">
        
        <!-- Error Heading -->
        <h2 class="error-header">SYSTEM FAULT: ERROR</h2>

        <!-- Dynamic error message -->
        <p class="error-message"><%= message %></p>

        <!-- Back button -->
        <a href="/" class="btn btn-neon-home">
            <i class="bi bi-arrow-left-circle me-2"></i> Return to Console
        </a>

    </div>
</div>
