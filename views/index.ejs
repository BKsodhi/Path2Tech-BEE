<% title = "Home - Path2Tech" %>

<!-- Welcome Section -->
<div class="my-5 p-5 text-center bg-light rounded shadow-sm">
  <h1 class="fw-bold text-primary">Welcome to Path2Tech: Prep.Track.Succeed</h1><br>
  <h2 class="fw-bold text-primary mb-3">Why Path2Tech?</h2>
  <p class="lead">
    Path2Tech helps you master concepts through interactive MCQs, track your progress,
    and improve your coding and system knowledge effectively. Learn at your pace,
    with Easy, Medium, and Hard difficulty levels for each subject.
  </p>
</div>

<!-- MCQ Subjects Section -->
<div class="row g-4 my-4">
  <% const subjects = [
      { name: "Java", icon: "bi-code-slash", color: "text-primary" },
      { name: "Cloud Computing", icon: "bi-cloud", color: "text-info" },
      { name: "System Design", icon: "bi-diagram-3", color: "text-warning" }
    ];
    const difficulties = ["Easy", "Medium", "Hard"];
  %>

  <% subjects.forEach(sub => { %>
    <div class="col-md-4">
      <div class="card shadow border-0 h-100">
        <div class="card-body text-center">
          <i class="bi <%= sub.icon %> fs-1 <%= sub.color %> mb-3"></i>
          <h5 class="card-title"><%= sub.name %></h5>
          <p class="card-text">
            Solve <%= sub.name %> MCQs across all difficulty levels.
          </p>
          <div class="d-flex justify-content-center flex-wrap gap-2">
            <% difficulties.forEach(diff => { %>
              <a href="/modules/<%= sub.name %>/MCQ/<%= diff %>" class="btn btn-primary">
                <%= diff %>
              </a>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>

<!-- Progress Section -->
<div class="text-center my-5">
  <p class="lead">Your personalized platform for mastering concepts with interactive practice.</p>
  <a href="/progress" class="btn btn-warning mt-3">View Your Progress</a>
</div>

