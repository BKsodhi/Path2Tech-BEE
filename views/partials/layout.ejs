<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title || "Path2Tech" %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <style>
    :root {
      --primary-blue: #0d3a62;
      --primary-hover: #1565c0;
      --accent-yellow: #f9a825;
      --success-green: #43a047;
      --danger-red: #c62828;
      --light-bg: #f5f7fa;
    }

    body {
      font-family: 'Roboto', sans-serif;
      background-color: var(--light-bg);
      color: #333;
      line-height: 1.6;
    }

    /* Navbar */
    .navbar {
      background: linear-gradient(90deg, var(--primary-blue), #1a5276);
      box-shadow: 0 3px 12px rgba(0, 0, 0, 0.15);
    }
    .navbar-brand {
      font-weight: 700;
      letter-spacing: 1px;
      font-size: 1.6rem;
      color: #fff !important;
    }
    .nav-link {
      font-weight: 500;
      margin-right: 10px;
      color: #e0e0e0 !important;
      transition: color 0.3s, transform 0.2s;
    }
    .nav-link:hover, .nav-link.active {
      color: var(--accent-yellow) !important;
      transform: translateY(-2px);
    }

    /* Card hover effect */
    .card {
      border-radius: 12px;
      border: none;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0,0,0,0.15);
    }

    /* Buttons */
    .btn {
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    .btn-primary {
      background-color: var(--primary-blue);
      border-color: var(--primary-blue);
    }
    .btn-primary:hover {
      background-color: var(--primary-hover);
      border-color: var(--primary-hover);
      transform: scale(1.05);
    }
    .btn-warning {
      background-color: var(--accent-yellow);
      border-color: var(--accent-yellow);
      color: #fff;
    }
    .btn-warning:hover {
      background-color: #fbc02d;
      border-color: #fbc02d;
    }
    .btn-danger {
      background-color: var(--danger-red);
      border-color: var(--danger-red);
      color: #fff;
    }
    .btn-danger:hover {
      background-color: #e53935;
      border-color: #e53935;
    }

    /* Footer */
    footer {
      background: var(--primary-blue);
      color: #fff;
      font-weight: 500;
      padding: 18px 0;
      margin-top: 40px;
      box-shadow: 0 -3px 10px rgba(0,0,0,0.1);
    }
    footer p { margin: 0; font-size: 0.95rem; }

    /* Responsive navbar tweaks */
    @media (max-width: 768px) {
      .navbar-nav { text-align: center; }
      .nav-item { margin-bottom: 10px; }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Path2Tech</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% const current = typeof currentPath !== 'undefined' ? currentPath : ''; %>
          <% if (user && user.role === 'admin') { %>
            <!-- Admin navbar (separate partial) -->
            <%- include('navbar-admin', { current, user }) %>
          <% } else { %>
            <li class="nav-item"><a class="nav-link <%= current === '/' ? 'active' : '' %>" href="/">Home</a></li>
            <li class="nav-item"><a class="nav-link <%= current.includes('/modules/Java') ? 'active' : '' %>" href="/modules/Java/MCQ/Easy">Java</a></li>
            <li class="nav-item"><a class="nav-link <%= current.includes('/modules/Cloud%20Computing') ? 'active' : '' %>" href="/modules/Cloud%20Computing/MCQ/Easy">Cloud</a></li>
            <li class="nav-item"><a class="nav-link <%= current.includes('/modules/System%20Design') ? 'active' : '' %>" href="/modules/System%20Design/MCQ/Easy">System Design</a></li>
            <li class="nav-item"><a class="nav-link <%= current.includes('/progress') ? 'active' : '' %>" href="/progress">My Progress</a></li>
           <% if (user) { %>
      <li class="nav-item">
        <form action="/logout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      </li>
    <% } else { %>
      <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
    <% } %>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Flash messages -->
  <div class="container mt-2">
    <% if (success_msg && success_msg.length) { %>
      <% success_msg.forEach(msg => { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% }) %>
    <% } %>
    <% if (error_msg && error_msg.length) { %>
      <% error_msg.forEach(msg => { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= msg %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- Main content -->
  <div class="container my-4">
    <%- body %>
  </div>

  <!-- Footer -->
  <footer class="text-center">
    <p>&copy; <%= new Date().getFullYear() %> Path2Tech. All rights reserved.</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>







