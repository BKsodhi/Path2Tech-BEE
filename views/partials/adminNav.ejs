<style>
    /* Admin Nav Specific Styles */
    :root {
        --primary-dark: #12181F;
        --accent-neon: #00FFD1;
        --text-color: #F5F7FA;
    }

    .admin-nav {
        background-color: var(--primary-dark);
        border-bottom: 3px solid var(--accent-neon);
        box-shadow: 0 4px 15px rgba(0, 255, 209, 0.3);
    }
    
    .admin-nav .navbar-brand {
        color: var(--accent-neon) !important;
        font-weight: 700;
        text-shadow: 0 0 5px rgba(0, 255, 209, 0.5);
    }

    .admin-nav .nav-link {
        color: var(--text-color) !important;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transition: color 0.2s, background-color 0.2s;
        border-radius: 4px;
        padding: 0.5rem 1rem;
    }
    
    .admin-nav .nav-link:hover {
        color: var(--accent-neon) !important;
        background-color: #283743;
    }

    .admin-nav .nav-link.active {
        color: var(--text-dark) !important;
        background-color: var(--accent-neon);
        font-weight: 700;
    }

    /* Override standard user nav links */
    .user-nav-links {
        display: none !important;
    }
</style>

<nav class="navbar navbar-expand-lg admin-nav sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/admin/dashboard">
            <i class="bi bi-shield-lock-fill me-2"></i> ADMIN CONSOLE
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNavbar" aria-controls="adminNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="adminNavbar">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link <%= activeTab === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                        <i class="bi bi-house-door-fill me-1"></i> Home (Questions)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeTab === 'users' ? 'active' : '' %>" href="/admin/users">
                        <i class="bi bi-people-fill me-1"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%= activeTab === 'progress' ? 'active' : '' %>" href="/admin/userProgress">
                        <i class="bi bi-graph-up-arrow me-1"></i> User Progress
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout" style="color: var(--danger-color) !important;">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>